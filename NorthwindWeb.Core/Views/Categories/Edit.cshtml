@model Categories

@{
    ViewBag.Title = "Modifica";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Modifica</h2>
<hr />
<ol class="breadcrumb">
    <li>
        <a asp-action="home" asp-controller="Dashboard">Dashboard</a>
    </li>
    <li>
        <a asp-controller="Categories" asp-action="Index">Categorii</a>
    </li>
    <li class="active">Modifica</li>
</ol>

<form asp-controller="Categories" asp-action="Edit" asp-antiforgery="true">
        <div class="form-horizontal">
            <h4>Categorie</h4>
            <hr />

            @Html.ValidationSummary(true)
            <input type="hidden" asp-for="CategoryID"/>

            <div class="form-group">
                <span class="control-label col-md-2 bold"><strong>Nume Categorie</strong></span>
                <div class="col-md-10">
                    <input type="text" asp-for="CategoryName" />
                    @Html.ValidationMessageFor(model => model.CategoryName)
                </div>
            </div>

            <div class="form-group">
                <span class="control-label col-md-2 bold"><strong>Descriere</strong></span>
                <div class="col-md-10">
                    <input type="text" asp-for="Description" />
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Salveaza" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

</form>
<div>
    <a asp-action="Index" class="btn btn-default">Inapoi</a>
</div>