@model Categories

@{
    ViewBag.Title = "Adauga";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Adauga</h2>


<form asp-antiforgery="true" asp-controller="Categories" asp-action="Create">
    <div class="form-horizontal">
        <ol class="breadcrumb">
            <li>
                <a asp-action="Home" asp-controller="Dashboard">Dashboard</a>
            </li>
            <li>
                <a asp-controller="Categories" asp-action="Index">Categorii</a>
            </li>
            <li class="active">Adauga</li>
            
            
        </ol>
        <hr />
        <h4>Categorie</h4>
        <hr />

        @Html.ValidationSummary(true)
        <div class="form-group">
            <span class="control-label col-md-2 bold"><strong>Nume Categorie</strong></span>
            <div class="col-md-10">
                <input type="text" asp-for="CategoryName" />
                @*@Html.EditorFor(model => model.CategoryName)*@
                @Html.ValidationMessageFor(model => model.CategoryName)
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2 bold"><strong>Descriere</strong></span>
            <div class="col-md-10">
                <input type="text" asp-for="Description" />
                @*@Html.EditorFor(model => model.Description)*@
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adauga" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-default">Inapoi</a>
</div>