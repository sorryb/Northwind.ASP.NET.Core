@model IEnumerable<Categories>

@{
    ViewBag.Title = "Categorii";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Categorii</h2>
<hr />
<ol class="breadcrumb">

    <li>
        <a asp-controller="Dashboard" asp-action="Home">Dashboard</a>
    </li>

    <li class="active">Categorii</li>
</ol>
<hr />
<div>
    <a asp-controller="Categories" asp-action="Create" class="btn btn-default">Adauga Categorii</a>
    <br /><br />
</div>
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>
                    Categorii
                </h4>
            </div>
            <div class="panel-body">
                <table id="CategoriesTable" class="cell-border hover order-column">
                    <thead>
                        <tr>
                            <th>
                                Nume Categorie
                            </th>
                            <th>
                                Descriere
                            </th>

                            <th>
                                Sterge
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>

                </table>
            </div>
        </div>
    </div>
</div>
