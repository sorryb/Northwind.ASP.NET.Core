<!DOCTYPE html>
<html lang="en">

<head>
    <script>
        var isLogedIn = @(User.Identity.IsAuthenticated ? 1 : 0);
    </script>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Phone Studio - @ViewBag.Title</title>

    <!-- Bootstrap -->
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/modern-business.css" rel="stylesheet" />
    <link href="~/css/alt info 2.css" rel="stylesheet" />
    <link href="~/css/Style.css" rel="stylesheet" />
    <!--Data tables-->
    <link href="~/lib/DataTables/media/css/jquery.dataTables.css" rel="stylesheet" />
    <link href="~/lib/DataTables/media/css/responsive.dataTables.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />


    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>

    <![endif]-->
</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- You'll want to use a responsive image option so this logo looks good on devices - I recommend using something like retina.js (do a quick Google search for it and you'll find it) -->

                <a asp-controller="Home" asp-action="Index" class="navbar-brand">Northwind Phone</a>

            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">

                <ul class="nav navbar-nav navbar-right">
                    <li id="services">
                        <a asp-controller="Services" asp-action="Index">Servicii</a>
                    </li>
                    <li id="portfolio" class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Produse <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li id="11columnportfolio">
                                <a asp-controller="Products" asp-action="Products" asp-route-category="Clasice">Clasic</a>
                            </li>
                            <li id="21columnportfolio">
                                <a asp-controller="Products" asp-action="Products" asp-route-category="Smartphone">Smartphone</a>
                            </li>
                            <li id="22columnportfolio">
                                <a asp-controller="Products" asp-action="Products" asp-route-category="Accesorii">Accesorii</a>
                            </li>
                            <li id="23columnportfolio">
                                <a asp-controller="Products" asp-action="Products" asp-route-category="Gadgeturi">Gadgeturi</a>
                            </li>
                            <li id="24columnportfolio">
                                <a asp-controller="Products" asp-action="Products" asp-route-category="eBook Reader">eBook readers</a>
                            </li>
                            <li id="25columnportfolio">
                                <a asp-controller="Products" asp-action="Products" asp-route-category="Servicii">Servicii</a>
                            </li>
                        </ul>
                    </li>
                    <li id="others" class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Alte informatii <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li id="fullwidthpage">
                                <a asp-controller="Other" asp-action="FullWidth">Avantajele magazinului online</a>
                            </li>
                            <li id="sidebarpage">
                                <a asp-controller="Other" asp-action="Sidebar">Asigurare back-up</a>
                            </li>
                            <li id="faq">
                                <a asp-controller="Other" asp-action="Faq">Intrebari frecvente</a>
                            </li>
                        </ul>
                    </li>

                    <li id="about">
                        <a asp-controller="About" asp-action="Index">Despre noi</a>
                    </li>
                    <li id="contact">
                        <a asp-controller="Contact" asp-action="Index">Contact</a>
                    </li>
                    <li>
                        @Html.Partial("_LoginPartial")
                    </li>

                    <li id="other" class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-search"></i><b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li class="col-lg-12">
                                <form id="searchInput" action="/Products/Products">
                                    <div class="input-group">
                                        <input type="text" name="search" class="form-control searchinput" style="width:auto" placeholder="Cauta in produse">
                                        <div class="input-group-btn">
                                            <button class="btn btn-default" type="submit">
                                                <i class="glyphicon glyphicon-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </li>
                        </ul>
                    </li>

                </ul>

            </div>
            <!-- /.navbar-collapse -->
        </div>

        <!--shopcart icon-->
        <div class="shopcartcontainer">
            <a asp-controller="ShopCart" asp-action="Index" class="shopcart-link">
                <div class="align-middle img-circle roundedshop">
                    <i class="glyphicon glyphicon-shopping-cart align-middle"></i>
                    <div class="shopcart-container-text">
                        <span id="shopcart-productcount">0</span>
                    </div>
                </div>
            </a>
        </div>

        <!-- /.container -->
    </nav>

    @RenderBody()

    <div class="container">

        <hr>

        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Northwind Phone 2017</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/script.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    @*<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>*@
    <script src="~/lib/DataTables/media/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/DataTables/media/js/dataTables.responsive.js"></script>
    <script src="~/js/ShopCart.js"></script>
    <script src="~/js/ShopCartDataTable.js"></script>
    <script src="~/js/OrderDatatable.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
