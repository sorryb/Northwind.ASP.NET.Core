@model List<NorthwindWeb.Models.Shippers>
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container whiterounded coloronwhite">
    <h2>Cos de Cumparaturi</h2><hr />

    <table id="ShopCartTable" class="cell-border hover order-column coloronwhite">
        <thead>
            <tr>
                <th>
                    Nume Produs
                </th>
                <th>
                    Cantitate
                </th>
                <th>
                    Pret unitar
                </th>
                <th>
                    Pret total
                </th>
                <th>
                    Sterge
                </th>
            </tr>
        </thead>
        <tbody></tbody>

    </table>
    <br />
    <div class="container col-xs-9">
        <strong><span class="coloronwhite pull-right">Total comanda = <span id="totalComanda" class="coloronwhite"></span></span></strong>
    </div>

    @using (Html.BeginForm("GetShipVia", "ShopCart", FormMethod.Post, htmlAttributes: new { @class = "ord-form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form">
            <strong class="coloronwhite">Selecteaza Curierul</strong><br />
           
            @Html.DropDownList("ShipVia", (IEnumerable<SelectListItem>)ViewBag.ShipVia, htmlAttributes: new { @class = "form"})
           
            <br />
            <br />
            <input type="submit" value="Trimite Comanda" class="btn btn-default" />

        </div>
        <br />
                }
</div>
