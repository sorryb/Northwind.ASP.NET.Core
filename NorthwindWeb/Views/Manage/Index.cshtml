@model NorthwindWeb.ViewModels.IndexViewModel
@{
    ViewBag.Title = "Schimbare date utilizator";
}


<div class="container">

    <h2>@ViewBag.Title.</h2>

    <p class="text-success">@ViewBag.StatusMessage</p>
    <div class="row">
        <div class="col-md-6">
            <img src="/images/@(ViewBag.UserName).jpg" onerror="this.src='/images/default.png'" style="max-width:100%;max-height:100%;">
        </div>
        <div class="col-md-6">
            <h4>Setari cont</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>Email:</dt>
                <dd>[ @Html.ActionLink("Email", "ChangeEmail") ]</dd>
                <dt>Parola:</dt>
                <dd>
                    [
                    @if (Model.HasPassword)
            {
                        @Html.ActionLink("Schimbare parola ", "ChangePassword")
                    }
                    else
                    {
                        @Html.ActionLink("Create", "SetPassword")
                    }
                    ]
                </dd>
                <dt>Fotografie de profil:</dt>
                <dd>[ @Html.ActionLink("Alege fotografia", "ChangeImage") ]</dd>
            </dl>
        </div>
    </div>
</div>
