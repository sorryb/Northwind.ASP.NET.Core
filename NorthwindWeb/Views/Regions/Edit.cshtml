@model NorthwindWeb.Models.Region

@{
    ViewBag.Title = "Modifica";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

    <h2>Modifica</h2>
    <hr />
    <ol class="breadcrumb">
        <li>
            @Html.ActionLink("Dashboard", "Home", "Dashboard")
        </li>
        <li>
            @Html.ActionLink("Regiuni", "Index", "Regions")
        </li>
        <li class="active">Modifica</li>
    </ol>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Regiune</h4>
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.RegionID)

            <div class="form-group">
                @Html.LabelFor(model => model.RegionDescription,"Descriere regiune", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.RegionDescription)
                    @Html.ValidationMessageFor(model => model.RegionDescription)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Salveaza" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Inapoi", "Details", "Regions", new { id = Model.RegionID }, new { @class = "btn btn-default" })
        
    </div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
