@{
    ViewBag.Title = "Clienti";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h2>Clienti</h2>
        <hr />
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Dashboard", "Home", "Dashboard")
            </li>

            <li class="active">Clienti</li>
        </ol>
        <hr />
        <br />
        <div>
            @Html.ActionLink("Adauga Clienti", "Create", null, new { @class = "btn btn-default" })
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>
                    Lista Clienti
                </h4>
            </div>
            <div class="panel-body">
                <table id="CustomersTable" class="cell-border hover order-column">
                    <thead>
                        <tr>
                            <th>
                                Nume Companie
                            </th>
                            <th>
                                Nume Contact
                            </th>
                            <th>
                                Pozitie
                            </th>
                            <th>
                                Oras
                            </th>
                            <th>
                                Tara
                            </th>
                            <th>
                                Telefon
                            </th>

                            <th>
                                Sterge
                            </th>
                        </tr>
                    </thead>

                    <tbody></tbody>

                </table>
            </div>
        </div>
    </div>
</div>
