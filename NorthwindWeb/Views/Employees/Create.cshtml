@model NorthwindWeb.Models.Employees

@{
    ViewBag.Title = "Adauga";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<h2>Adauga</h2>
<hr />
<ol class="breadcrumb">
    <li>
        @Html.ActionLink("Dashboard", "Home", "Dashboard")
    </li>
    <li>
        @Html.ActionLink("Angajati", "Index", "Employees")
    </li>
    <li class="active">Adauga</li>
</ol>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Angajat</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            <span class="control-label col-md-2 bold"><strong>Nume</strong></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.LastName)
                @Html.ValidationMessageFor(model => model.LastName)
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2 bold"><strong>Prenume</strong></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.FirstName)
                @Html.ValidationMessageFor(model => model.FirstName)
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2 bold"><strong>Pozitie</strong></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2 bold"><strong>Metoda de Adresare</strong></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TitleOfCourtesy)
                @Html.ValidationMessageFor(model => model.TitleOfCourtesy)
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2 bold"><strong>Data nasterii</strong></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.BirthDate)
                @Html.ValidationMessageFor(model => model.BirthDate)
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2 bold"><strong>Data angajarii</strong></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.HireDate)
                @Html.ValidationMessageFor(model => model.HireDate)
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2 bold"><strong>Adresa</strong></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Address)
                @Html.ValidationMessageFor(model => model.Address)
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2 bold"><strong>Oras</strong></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.City)
                @Html.ValidationMessageFor(model => model.City)
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2 bold"><strong>Regiune</strong></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Region)
                @Html.ValidationMessageFor(model => model.Region)
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2 bold"><strong>Cod Postal</strong></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PostalCode)
                @Html.ValidationMessageFor(model => model.PostalCode)
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2 bold"><strong>Tara</strong></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Country)
                @Html.ValidationMessageFor(model => model.Country)
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2 bold"><strong>Telefon</strong></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.HomePhone)
                @Html.ValidationMessageFor(model => model.HomePhone)
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2 bold"><strong>Interior</strong></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Extension)
                @Html.ValidationMessageFor(model => model.Extension)
            </div>
        </div>

        @*<div class="form-group">
                @Html.LabelFor(model => model.Photo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Photo)
                    @Html.ValidationMessageFor(model => model.Photo)
                </div>
            </div>*@

        <div class="form-group">
            <span class="control-label col-md-2 bold"><strong>Note</strong></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Notes)
                @Html.ValidationMessageFor(model => model.Notes)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ReportsTo, "Rapoarteaza catre", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ReportsTo", String.Empty)
                @Html.ValidationMessageFor(model => model.ReportsTo)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adauga" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Inapoi", "Index", null, new { @class = "btn btn-default" }) 
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
